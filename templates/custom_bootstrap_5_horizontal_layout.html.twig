{% use 'bootstrap_5_horizontal_layout.html.twig' %}

{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        {%- for error in errors -%}
            <div class="{% if form is not rootform %}invalid-feedback{% else %}alert alert-danger{% endif %} d-block custom-error-class">{{ error.message }}</div>
        {%- endfor -%}
    {%- endif %}
{%- endblock form_errors %}
